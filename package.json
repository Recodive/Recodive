{
	"author": "Recodive",
	"license": "MPL-2.0",
	"type": "module",
	"version": "1.8.4",
	"scripts": {
		"prepare": "husky",
		"dev": "pnpm -r dev",
		"build": "pnpm -r build",
		"test": "vitest --run",
		"test:watch": "vitest --ui",
		"test:ci": "vitest --run --coverage",
		"lint": "eslint --fix . && prettier -w .",
		"lint:ci": "eslint . && prettier --check .",
		"gen-badges": "vitest run --coverage && istanbul-badges-readme --logo=\"vitest\" && git add README.md",
		"release": "bumpp -r"
	},
	"dependencies": {
		"commitlint": "^18.0.0",
		"commitlint-plugin-function-rules": "^3.0.0",
		"eslint": "^8.57.0",
		"husky": "^9.0.11",
		"lint-staged": "^15.2.2",
		"prettier": "^3.2.5",
		"prompts": "^2.4.2"
	},
	"devDependencies": {
		"@commitlint/cli": "^18.0.0",
		"@commitlint/lint": "^18.0.0",
		"@rushstack/eslint-patch": "^1.3.0",
		"@types/node": "^20.2.5",
		"@types/prompts": "^2.4.4",
		"@vitest/coverage-v8": "^1.2.2",
		"@vitest/ui": "^1.0.0",
		"bumpp": "^9.3.0",
		"istanbul-badges-readme": "^1.8.5",
		"typescript": "^5.0.4",
		"vitest": "^1.2.2"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Recodive/Recodive.git"
	},
	"packageManager": "pnpm@8.14.3"
}
