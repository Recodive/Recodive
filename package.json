{
	"author": "Recodive",
	"license": "MPL-2.0",
	"type": "module",
	"scripts": {
		"prepare": "husky install",
		"dev": "pnpm -r dev",
		"build": "pnpm -r build",
		"test": "vitest --run",
		"test:watch": "vitest --ui",
		"test:ci": "vitest --run --coverage",
		"lint": "eslint --fix --ext .ts,.cjs ./ && prettier -w .",
		"lint:ci": "eslint --ext .ts,.cjs ./ && prettier --check .",
		"gen-badges": "vitest run --coverage && istanbul-badges-readme --logo=\"vitest\" && git add README.md"
	},
	"dependencies": {
		"commitlint": "^17.6.3",
		"commitlint-plugin-function-rules": "^2.0.0",
		"eslint": "^8.41.0",
		"husky": "^8.0.3",
		"lint-staged": "^14.0.0",
		"prettier": "^3.0.0",
		"prompts": "^2.4.2"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.6.3",
		"@commitlint/lint": "^17.6.3",
		"@rushstack/eslint-patch": "^1.3.0",
		"@types/node": "^20.2.5",
		"@types/prompts": "^2.4.4",
		"@vitest/coverage-c8": "^0.33.0",
		"@vitest/ui": "^0.34.0",
		"istanbul-badges-readme": "^1.8.5",
		"typescript": "^5.0.4",
		"vitest": "^0.31.1"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Recodive/Recodive.git"
	},
	"packageManager": "pnpm@8.7.6"
}
