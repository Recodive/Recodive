{
	"type": "module",
	"scripts": {
		"prepare": "husky install",
		"dev": "pnpm -r dev",
		"build": "pnpm -r build",
		"test": "vitest --run",
		"test:watch": "vitest --ui",
		"test:ci": "vitest --run --coverage",
		"lint": "eslint --fix --ext .ts ./ && prettier -w .",
		"lint:ci": "eslint --ext .ts ./ && prettier --check .",
		"gen-badges": "vitest run --coverage && istanbul-badges-readme --logo=\"vitest\" && git add README.md"
	},
	"dependencies": {
		"commitlint": "^17.4.2",
		"commitlint-plugin-function-rules": "^1.7.1",
		"eslint": "^8.33.0",
		"husky": "^8.0.3",
		"lint-staged": "^13.1.0",
		"prettier": "^2.8.3",
		"prompts": "^2.4.2"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.4.2",
		"@commitlint/lint": "^17.4.2",
		"@rushstack/eslint-patch": "^1.2.0",
		"@types/node": "^20.0.0",
		"@types/prompts": "^2.4.2",
		"@vitest/coverage-c8": "^0.31.0",
		"@vitest/ui": "^0.31.0",
		"istanbul-badges-readme": "^1.8.4",
		"typescript": "^5.0.0",
		"vitest": "^0.31.0"
	},
	"packageManager": "pnpm@8.4.0",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Recodive/Configs.git"
	},
	"author": "Recodive",
	"license": "MPL-2.0"
}
