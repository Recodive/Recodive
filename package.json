{
	"name": "@recodive/configs",
	"version": "1.0.2",
	"description": "Standard configuration files for Recodive projects",
	"main": "lib/index.js",
	"types": "lib/index.d.ts",
	"files": [
		"configs",
		"lib/*"
	],
	"scripts": {
		"dev": "tsc -w",
		"build": "tsc",
		"test": "vitest --run",
		"test:watch": "vitest --ui",
		"test:ci": "vitest --run --coverage",
		"lint": "eslint --fix --ext .ts ./ && prettier -w .",
		"lint:ci": "eslint --ext .ts ./ && prettier --check .",
		"prepare": "husky install",
		"gen-badges": "vitest run --coverage && istanbul-badges-readme --logo=\"vitest\" && git add README.md"
	},
	"dependencies": {
		"@typescript-eslint/eslint-plugin": "^5.48.0",
		"@typescript-eslint/parser": "^5.48.0",
		"commitlint": "^17.4.0",
		"commitlint-plugin-function-rules": "^1.6.2",
		"eslint": "^8.31.0",
		"eslint-config-prettier": "^8.6.0",
		"eslint-plugin-unicorn": "^45.0.2",
		"eslint-plugin-vue": "^9.8.0",
		"husky": "^8.0.0",
		"lint-staged": "^13.1.0",
		"prettier": "^2.8.1",
		"prompts": "^2.4.2"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.3.0",
		"@commitlint/lint": "^17.3.0",
		"@types/node": "^18.11.18",
		"@types/prompts": "^2.4.2",
		"@vitest/coverage-c8": "^0.27.1",
		"@vitest/ui": "^0.27.1",
		"istanbul-badges-readme": "^1.8.4",
		"typescript": "^4.9.4",
		"vitest": "^0.27.1"
	},
	"packageManager": "pnpm@7.21.0",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Recodive/Configs.git"
	},
	"author": "Recodive",
	"license": "MPL-2.0"
}
